<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <top.defaults.view.TextButton
        android:id="@+id/open_camera_RGB"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Start Survey!" />

    <RadioGroup
        android:id="@+id/radioGrp3"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/header3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Experiment (1 minute each)" />

        <RadioButton
            android:id="@+id/radioPG"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"

            android:layout_weight="1"
            android:checked="true"
            android:text="Playground"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/radioNS"
            android:layout_width="350dp"
            android:layout_height="40dp"

            android:checked="false"
            android:layout_weight="1"
            android:textSize="14dp"
            android:text="Natural light + stationary"
            />
        <RadioButton
            android:id="@+id/radioLED"
            android:layout_width="350dp"
            android:layout_height="40dp"

            android:checked="false"
            android:layout_weight="1"
            android:textSize="14dp"
            android:text="LED + stationary"
            />
        <RadioButton
            android:id="@+id/radioIncandescent"
            android:layout_width="350dp"
            android:layout_height="40dp"

            android:checked="false"
            android:layout_weight="1"
            android:textSize="14dp"
            android:text="Incandescent + stationary"
            />
        <RadioButton
            android:id="@+id/radioRandom"
            android:layout_width="350dp"
            android:layout_height="40dp"

            android:checked="false"
            android:layout_weight="1"
            android:textSize="14dp"
            android:text="Natural light + head shaking randomly"
            />

        <RadioButton
            android:id="@+id/radioLR"
            android:layout_width="350dp"
            android:layout_height="40dp"

            android:checked="false"
            android:layout_weight="1"
            android:textSize="14dp"
            android:text="Natural light + head 180Â° rotating left and right"
            />

        <RadioButton
            android:id="@+id/radioTalking"
            android:layout_width="350dp"
            android:layout_height="40dp"

            android:checked="false"
            android:layout_weight="1"
            android:textSize="14dp"
            android:text="Natural light + talking"
            />

        <RadioButton
            android:id="@+id/radioRunning"
            android:layout_width="350dp"
            android:layout_height="40dp"

            android:checked="false"
            android:layout_weight="1"
            android:textSize="14dp"
            android:text="Natural light + running first"
            />

        <RadioButton
            android:id="@+id/LongPPG"
            android:layout_width="350dp"
            android:layout_height="40dp"

            android:checked="false"
            android:layout_weight="1"
            android:textSize="14dp"
            android:text="15min PPG"
            />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>